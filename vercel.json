{
  "version": 2,
  "name": "spotify-clone",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/frontend/dist/assets/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/index.html"
    }
  ],
  "env": {
    "VITE_CLERK_PUBLISHABLE_KEY": "@clerk-publishable-key"
  },
  "build": {
    "env": {
      "VITE_CLERK_PUBLISHABLE_KEY": "@clerk-publishable-key"
    }
  }
}

